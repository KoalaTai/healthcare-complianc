# Flask Application Settings
APP_HOST=0.0.0.0
APP_PORT=5000

# Security Settings
SECURITY_SECRET_KEY="your-secret-key-here-32-bytes-minimum"
SECURITY_DEBUG=True
SECURITY_TESTING=False
SECURITY_CSRF_ENABLED=True

# Database Settings
DATABASE_URL="postgresql://user:password@localhost:5432/virtualbackroom"

